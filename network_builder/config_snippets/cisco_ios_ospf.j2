
! Enables DNS lookup of neighboring router-ID, to easier identify the neighbors, see example below:
! alv-rr1#show ip ospf neighbor 
! Neighbor ID     Pri   State           Dead Time   Address         Interface
! vmo-rr1.bahnhof   0   FULL/  -        00:00:38    46.59.112.129   Vlan309
ip ospf name-lookup

router ospf 100
 router-id {{ management.prefix_v4|prefix_to_ip }}
 log-adjacency-changes detail
 max-metric router-lsa on-startup wait-for-bgp
 timers lsa arrival 50
 timers throttle lsa all 10 100 1000
 ! Changes initial SPF delay from 5000msec to 10msec Default SPF runs after 5sec has passed, IOS-XR default = 50msec. 
 timers throttle spf 10 100 1000
 timers pacing flood 5
 timers pacing retransmission 60
 ! Enables Incremental SPF algorithm to trigger less full SPF calculations. 
 ispf
 area 0 authentication message-digest
{% for prefix in prefixes_ospf_v4 %}
 network {{ prefix|prefix_to_network }} {{ prefix|prefix_to_wildcard }} area 0
{% endfor %}

ipv6 router ospf 200
 router-id {{ management.prefix_v4|prefix_to_ip }}
 max-metric router-lsa on-startup wait-for-bgp
 log-adjacency-changes detail
 timers throttle spf 10 100 1000
 timers throttle lsa 10 100 1000
 timers lsa arrival 50
 timers pacing flood 5
 timers pacing retransmission 60

interface loopback 0 
 ipv6 ospf 200 area 0
